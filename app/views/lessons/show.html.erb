<br />

<div class="booyah-box col-10 offset-1">
	<div class="row breadcumbs">
		<b><%= link_to current_lesson.section.course.title, course_path(current_lesson.section.course) %> \ <%= current_lesson.section.title %> \ </b>
		<h1><%= current_lesson.title %></h1>

		<% if current_lesson.next_lesson.present? %>
    		<%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-default float-right' do %>
    			Next Lesson &nbsp;<span class="fa fa-forward"></span>
    		<% end %>
  		<% end %>
	</div>
	<hr>
	<p>
		<%= current_lesson.subtitle %>
	</p>

	<% if current_lesson.video.present? %>
		<video id='my-video' class='video-js vjs-big-play-centered vjs-fluid' controls preload='auto' width='auto' height='auto' poster="<%= image_url 'video_poster.jpg' %>" data-setup='{}' >
			<source src="<%= current_lesson.video.url %>" type='video/mp4'>

			<noscript>
				<p class='vjs-no-js'>
					To view this video please enable JavaScript, and consider upgrading to a web browser that
					<a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
				</p>
			</noscript>
		</video>
	<% end %>
</div>