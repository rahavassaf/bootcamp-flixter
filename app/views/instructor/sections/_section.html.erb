<li data-update-url="<%= instructor_section_path(section) %>" class="section-li">
	<div class="header">
		<span class="fa fa-ellipsis-v"></span>

		<%= section.title %>
	</div>

	<%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm' %>
	<br class="clr" />
	<br class="clr" />
	
	<ul class="lessons">
		<% section.lessons.rank(:row_order).each do |l| %>
			<%= render partial: 'instructor/lessons/lesson', locals: {lesson: l} %>
		<% end %>
	</ul>

	&nbsp;
</li>